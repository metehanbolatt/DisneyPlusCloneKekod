<resources>
    <!-- Base application theme. -->
    <style name="Theme.DisneyPlusCloneKekod" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorControlNormal">@color/input_field_cursor_color</item>
        <item name="colorControlActivated">@color/input_field_cursor_color</item>
        <item name="colorControlHighlight">@color/input_field_cursor_color</item>
    </style>

</resources>